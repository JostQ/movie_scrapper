<div class="container">
  <h1 class="row justify-content-center">Movie Seacher</h1>
  <div class="row justify-content-center">
    <%= form_tag '/', method: :post, class: "p-3 col-8 shadow border rounded" do%>
      <div class="form-group">
        <label for="search">Search engine</label>
        <%= search_field_tag :search, '', class: "form-control", placeholder: "Search..." %>
      </div>
      <%= button_tag 'Search', class: "btn btn-dark col-12"%>
    <% end %>
  </div>
</div>
